<!DOCTYPE html>
<html lang="en">

<!-- <%- include('./partials/head.ejs')  %> -->

<%-include('./partials/head.ejs')  %>

<body>
    <%- include('./partials/nav.ejs')  %>
    <div class="container" style="border: solid red; border-radius: 2%; height:auto; width: auto; padding: 2%;">
        <h2 style="font-size: 49px;"> Answer the Question:</h2>
        <% if(quiz.questions.length>0){ %>
        <% quiz.questions.forEach(question=>{%>
        <h3>Question:-</h3>
        <h3 class="question" style="font-size: 50px;"><%= question.question %> </h3>
        <h4>Option 1:-</h4>
        <p class="snippet" style="font-size: 20px;"><%=  question.option1%></p>
        <h4>Option 2:-</h4>
        <p class="snippet" style="font-size: 20px;"><%=  question.option2%></p>
        <h3>Answer :-</h3>
        <p class="snippet" style="font-size: 20px;"><%=  question.answer%></p>
        <% }) %>
        <% } %>
        <button>finish</button>
    </div>
    <script src="/jquery/jquery-3.5.1.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>